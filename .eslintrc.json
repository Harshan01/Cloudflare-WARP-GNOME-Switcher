{
    "globals": {
        "imports": "readonly",
        "log": "readonly",
        "logError": "readonly",
        "print": "readonly",
        "printerr": "readonly",
        "window": "readonly",
        "console": "readonly"
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}